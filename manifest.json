{
  "manifest_version": 2,
  "icons": {
    "128": "images/icon-128.png"
  },
  "name": "Zimbra notifier",
  "short_name": "znotifier",
  "description": "Mail and appointment notification for Zimbra.",
  "version": "2.1.0",
  "background": {
    "scripts": [
      "js/jquery-3.1.1.min.js",
      "js/soap.js",
      "js/utils.js",
      "js/zimbra-notifier.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "background",
    "storage",
    "tabs",
    "notifications",
    "alarms",
    "https://webmail.pentalog.fr/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
